{
    "name": "@cyverse-de/ui-lib",
    "version": "0.3.6",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "date-fns": "^1.30.1",
        "md5": "^2.2.1",
        "react-highlighter": "^0.4.3",
        "react-loading-overlay": "^1.0.1",
        "react-scripts": "2.1.8"
    },
    "peerDependencies": {
        "formik": "^1.5.4",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-intl": "^2.9.0"
    },
    "scripts": {
        "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "test:ci": "CI=true react-scripts test --env=jsdom --ci --testResultsProcessor ./node_modules/jest-junit-reporter",
        "storybook": "start-storybook -p 9009 -s public",
        "build-storybook": "build-storybook -s public",
        "deploy-storybook": "storybook-to-ghpages",
        "format": "prettier --write 'src/**/*.js' 'stories/**/*.js'",
        "build-publish": "npm run build && npm-cli-login && npm publish --access public"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "always",
        "jsxBracketSameLine": false
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cyverse-de/ui-lib.git"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/plugin-proposal-class-properties": "^7.3.4",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.3.4",
        "@babel/preset-react": "^7.0.0",
        "@material-ui/core": "^4.3.0",
        "@material-ui/icons": "^4.2.1",
        "@material-ui/lab": "^4.0.0-alpha.20",
        "@storybook/addon-actions": "^5.1.10",
        "@storybook/addon-console": "^1.1.0",
        "@storybook/addon-knobs": "^5.1.10",
        "@storybook/addon-links": "^5.1.10",
        "@storybook/addon-storysource": "^5.1.10",
        "@storybook/addons": "^5.1.10",
        "@storybook/react": "^5.1.10",
        "@storybook/storybook-deployer": "^2.8.1",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "formik": "^1.5.4",
        "husky": "^1.3.1",
        "jest-junit-reporter": "^1.1.0",
        "prettier": "1.16.4",
        "pretty-quick": "^1.10.0",
        "prop-types": "^15.7.2",
        "react-intl": "^2.9.0"
    },
    "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
    "main": "dist/lib.js",
    "module": "dist/lib.js",
    "author": "discoenv",
    "license": "ISC"
}
